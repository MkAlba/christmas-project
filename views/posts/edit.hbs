{{#with editpost}}
<h2>EDITING</h2>
<form class = "mx-sm-3 mb-2" action="/posts/{{ id }}/update" method="POST">
 <div class="form-group ">
    <label for="text" >Title</label>
    <input type="text" value ="{{title}}" class="form-control mb-3" id="exampleInput" name="title" placeholder="Enter Title">
  </div>
<div class="input-group mb-3">
  <input type="file" class="form-control" value ="{{image}}" name ="image" id="inputGroupFile02">
  <label class="input-group-text" for="inputGroupFile02">Upload</label>
</div>
    <div class="form-group ">
    <textarea class="form-control mb-3" rows = "8" for="typeText" name = "text">{{text}}</textarea>    
  </div>
<button class="btn btn-primary  " type="submit">Submit EDIT</button>
</form>
{{/with}}